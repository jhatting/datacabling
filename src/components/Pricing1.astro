---
import Button from "./Button.astro";
const title = "";
const subtitle = "";

const pricing = [
  {
    name: "Computer Relocation",
    price: "$100",
    description: " Relocating computers and ensuring network connectivity.",
    features: [
      {
        name: "Single Computer Relocation: $100",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Small Office Relocation (Up to 10 Computers): $500",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Medium Office Relocation (11-30 Computers): $1,200",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Large Office Relocation (31-100 Computers): $2,500",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Network Reconfiguration: $150 per hour",
        icon: "heroicon-o-check-circle",
      },
    ],
    cta: "Get started",
    ctaLink: "/contact",
  },
  {
    name: "Audio/Video Installation",
    price: "$800",
    description: "Installation of audio and video systems.",
    features: [
      {
        name: "Home Theater Setup: $800",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Conference Room AV Setup: $1,500",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Whole Home Audio Setup: $2,000",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Custom AV Solutions: Starting at $75 per device",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Troubleshooting & Repairs: $85 per hour",
        icon: "heroicon-o-check-circle",
      },
    ],
    cta: "Get started",
    ctaLink: "/contact",
  },
  {
    name: "Server/Equipment Room Cleanup",
    price: "$500",
    description:
      "Organizing and managing server rooms.",
    features: [
      {
        name: "Basic Cleanup (Up to 2 Racks): $500",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Standard Cleanup (3-5 Racks): $1,200",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Comprehensive Cleanup (6+ Racks): $2,500",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Cable Management: $100 per hour",
        icon: "heroicon-o-check-circle",
      },
      {
        name: "Ongoing Maintenance: $150 per hour",
        icon: "heroicon-o-check-circle",
      },
    ],
    cta: "Get started",
    ctaLink: "/contact",
  },
];
---

<section class="bg-stone-100 dark:bg-slate-800">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-12">
      <h2
        class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
      >
        {title}
      </h2>
      <p class="mb-5 font-light text-gray-500 sm:text-xl dark:text-gray-400">
        {subtitle}
      </p>
    </div>
    <div
      class="space-y-8 lg:grid lg:grid-cols-3 sm:gap-6 xl:gap-10 lg:space-y-0"
    >
      {
        pricing.map((plan) => (
          <div class="flex flex-col p-6 mx-auto max-w-lg text-center text-gray-900 bg-white rounded-lg border border-gray-100 shadow dark:border-gray-600 xl:p-8 dark:bg-gray-800 dark:text-white">
            <h3 class="mb-4 text-2xl font-semibold">{plan.name}</h3>
            <p class="font-light text-gray-500 sm:text-lg dark:text-gray-400">
              {plan.description}
            </p>
            <div class="flex justify-center items-baseline my-8">
              <span class="mr-2 text-5xl font-extrabold">{plan.price}</span>
              <span class="text-gray-500 dark:text-gray-400">minimum</span>
            </div>

            <ul role="list" class="mb-8 space-y-4 text-left">
              {plan.features.map((feature) => (
                <li class="flex items-center space-x-3">
                  <svg
                    class="flex-shrink-0 w-5 h-5 text-green-500 dark:text-green-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span>{feature.name}</span>
                </li>
              ))}
            </ul>
            <Button text={plan.cta} href={plan.ctaLink} />
          </div>
        ))
      }
    </div>
  </div>
</section>
