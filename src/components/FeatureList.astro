---
import Heading from "./Heading.astro";

const heading = "Some things I can help you with";

const sections = [
  "Network Cabling",
  "Structured Cabling",
  "Voice & Data Cabling",
  "Computer Relocation",
  "Audio/Video",
  "Server/Equipment Room Cleanup",
  "Telephone Wiring",
  "Ring Doorbell & Camera Installation",

];
const sectionsText = [
  "Installation and maintenance of network cables for businesses and homes.",
  "Designing and implementing structured cabling systems.",
  "Setup for voice and data transmission.",
  "Relocating computers and ensuring network connectivity.",
  "Installation of audio and video systems.",
  "Organizing and managing server rooms.",
  "Installation and maintenance of telephone lines.",
  "Installing security cameras and doorbells.",
];
---

<div class="mb-12 bg-stone-100 dark:bg-slate-800">
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <Heading heading={heading} />
    <div
      class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-1 md:space-y-0"
    >
      {
        sections.map((section) => {
          return (
            <div class="flex flex-col">
              <div class="mt-6">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">
                  {sections[sections.indexOf(section)]}
                </h3>
                <p class="mb-8 mt-2 text-lg text-gray-700 dark:text-gray-400">
                  {sectionsText[sections.indexOf(section)]}
                </p>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</div>
